<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEditFeedingActivity">

    <EditText
        android:id="@+id/edit_text_blood_sugar"
        android:layout_width="362dp"
        android:layout_height="38dp"
        android:layout_marginTop="32dp"
        android:hint="Blood Sugar"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_food_info"
        android:layout_width="363dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:hint="Food and Drinks"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_blood_sugar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="428dp"
        android:text="Carbs:"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/number_picker_carbs"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <NumberPicker
        android:id="@+id/number_picker_carbs"
        android:layout_width="111dp"
        android:layout_height="139dp"
        android:layout_marginBottom="376dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/radio_group_meal"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="72dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radio_no_meal"
            android:layout_width="135dp"
            android:layout_height="46dp"
            android:layout_marginStart="148dp"
            android:layout_marginTop="130dp"
            android:baselineAligned="false"
            android:onClick="onRadioButtonClicked"
            android:text="No Meal"
            app:layout_constraintStart_toStartOf="@id/radio_after_meal" />

        <RadioButton
            android:id="@+id/radio_before_meal"
            android:layout_width="135dp"
            android:layout_height="48dp"
            android:layout_marginStart="148dp"
            android:layout_marginBottom="20dp"
            android:onClick="onRadioButtonClicked"
            android:text="Before Meal"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioButton
            android:id="@+id/radio_after_meal"
            android:layout_width="138dp"
            android:layout_height="42dp"
            android:layout_marginStart="148dp"
            android:layout_marginBottom="180dp"
            android:onClick="onRadioButtonClicked"
            android:text="After Meal"
            app:layout_constraintStart_toStartOf="@id/radio_before_meal" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>